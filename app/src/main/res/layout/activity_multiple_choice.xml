<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rmn.iakfinalproject.MultipleChoice">

    <LinearLayout
        android:id="@+id/categoryLine"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginRight="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/currentCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linux Environment"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/scoreLine"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : "
            android:textSize="18sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/currentScore"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:textColor="@android:color/holo_green_light"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/questionLine"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/scoreLine"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/currentQuestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#fff"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionLine"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/questionLine"
        android:layout_margin="10dp"
        >
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/optionList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/optionList1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    />
                <RadioButton
                    android:id="@+id/optionList2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    />
                <RadioButton
                    android:id="@+id/optionList3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    />
            </RadioGroup>
        </HorizontalScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/menuButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionLine"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="13dp"
        android:layout_gravity="end"
        android:text="Home"
        android:onClick="homeButton"
        android:textColor="@android:color/black"
        />
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionLine"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="18dp"
        android:textColor="@android:color/black"
        android:text="Submit"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitButton"
        android:layout_alignEnd="@+id/submitButton"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/submitButton"
            android:text="Lives remaining: "
            android:textSize="10sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/currentLife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "5"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_light"

            />
    </LinearLayout>
</RelativeLayout>
